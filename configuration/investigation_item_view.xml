<?xml version="1.0" encoding="utf-8"?>
<data>
    <!-- base structure of product.template, common with product.product -->
    <record id="investigation_item" model="ir.ui.view">
        <field name="name">investigation.item</field>
        <field name="model">investigation.item</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Investigation Line">
                <sheet>
                    <group>
                    <field name='rate'/>
                    <field name='patient_name'/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


    <record id="investigation_line_act" model="ir.actions.act_window">
        <field name="name">Investigation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">investigation.item</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p>
        </field>
    </record>
        <menuitem id="menu_islamia_configuration" name="Bill Item"
            parent="islamia_laser.menu_investigation_item"
            action="investigation_line_act" sequence="110" groups="islamia_laser.group_islamia_user"/>
    </data>