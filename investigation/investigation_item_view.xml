<?xml version="1.0" encoding="utf-8"?>
<data>
    <!-- base structure of product.template, common with product.product -->
    <record id="investigation_item" model="ir.ui.view">
        <field name="name">investigation.item</field>
        <field name="model">investigation.item</field>
        <field name="mode">primary</field>
<field name="arch" type="xml">
            <form string="Bill Item">
                <sheet>
                    <group>
                    <field name='name'/>
                    <field name='patient_id'/>
                    <field name='patient_name' on_change="_onchange_patient(patient_name)"/>
                    <field name='age'/>
                    <field name='sex'/>
                    <field name='address'/>
                    <field name='ref_doctors'/>
                    </group>
                    <notebook>
                        <page string="Reference Value">
                            <field name="investigation_item_line_id" mode="tree">
                                <tree string="Ref" editable="bottom">
                                    <field name="bill_item_entry_id"/>
                                    <field name="department"/>
                                    <field name="rate"/>
                                    <field name="discount"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="total_without_discount"/>
                        <field name="discount"/>
                        <field name="flat_discount"/>
                        <field name="grand_total"/>
                        <field name="paid"/>
                        <field name="due"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


    <record id="investigation_line_act" model="ir.actions.act_window">
        <field name="name">Investigation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">investigation.item</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p>
        </field>
    </record>
        <menuitem id="menu_islamia_configuration" name="Billing"
            parent="islamia_laser.menu_investigation_item"
            action="investigation_line_act" sequence="109" groups="islamia_laser.group_islamia_user"/>
    </data>