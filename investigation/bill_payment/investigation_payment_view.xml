<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <!-- base structure of product.template, common with product.product -->
    <record id="investigation_payment_view" model="ir.ui.view">
        <field name="name">investigation.payment</field>
        <field name="model">investigation.payment</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Payment">
                <sheet>
                    <group>
                    <field name='date'/>
                    <field name='bill_id'/>
                    <field name='admission_id'/>
                    <field name='amount'/>
                    </group>

                    <footer>
                        <button name="btn_add_payment" string="Add" class="btn btn-primary" type="object" groups="islamia_laser.group_islamia_user"/>
                    <button name="btn_cancel" string="Cancel" class="btn btn-primary oe_highlight" type="object"  groups="islamia_laser.group_islamia_user"/>
                    </footer>
                </sheet>

            </form>
        </field>
    </record>

      <record id="investigation_payment_tree" model="ir.ui.view">
        <field name="name">investigation.payment.tree</field>
        <field name="model">investigation.payment</field>
        <field name="arch" type="xml">
            <tree>
                    <field name='date'/>
                    <field name='bill_id'/>
                    <field name='amount'/>
            </tree>
        </field>
    </record>


    <record id="investigation_payment_act" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">investigation.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Payment
            </p>
        </field>
    </record>




