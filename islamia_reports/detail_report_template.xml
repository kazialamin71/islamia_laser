<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_details_collection">
    <t t-call="web.html_container">
        <t t-call="web.internal_layout">
            <div class="page">
                <div class="row">
                    <h2>Daily Collection Report</h2>
                    <span t-esc="data['start_date']"/> to <span t-esc="data['end_date']"/>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                        <th>Sl</th>
                        <th>Bill_id</th>
                            <th>Patient Name</th>
                        <th>Grand Total</th>

                        <th>Paid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="sl" t-value="0"/>
                        <tr t-foreach="data['values']" t-as="obj">
                            <t t-set="sl" t-value="sl+1"/>
                            <td><span t-esc="sl"/> </td>

                            <td><span t-esc="obj[0]"/></td>
                            <td><span t-esc="obj[2]"/></td>
                            <td><span t-esc="obj[1]"/></td>
                            <td><span t-esc="obj[3]"/></td>
                        </tr>
                    </tbody>

                </table>



            </div>
        </t>
    </t>
</template>
</odoo>
